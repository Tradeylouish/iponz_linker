{
  "manifest_version": 3,
  "name": "IPONZ Linker",
  "version": "2.1.0",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "64": "images/icon-64.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "64": "images/icon-64.png",
      "128": "images/icon-128.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://iponz.link/?*"
      ],
      "js": [
        "url-content-script.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://app.iponz.govt.nz/app/Extra/IP/*"
      ],
      "js": [
        "proxy-click.js"
      ],
      "world": "MAIN",
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://app.iponz.govt.nz/app/Extra/IP/*"
      ],
      "js": [
        "mappings.js",
        "search-content-script.js"
      ],
      "run_at": "document_end"
    }
  ]
}
